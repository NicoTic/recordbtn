<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.cmnit.recordcompose.PlayRecorderButton
        android:id="@+id/play_recorder_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        tools:text="5''"
        tools:drawableLeft="@mipmap/sound_voice_3"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:visibility="visible"
        android:background="@drawable/btn_red_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cancel_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/cancel"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/play_recorder_btn"
        app:layout_constraintEnd_toEndOf="@id/play_recorder_btn"
        app:layout_constraintBottom_toTopOf="@id/play_recorder_btn"
        app:layout_constraintStart_toEndOf="@id/play_recorder_btn"
         />
</androidx.constraintlayout.widget.ConstraintLayout>